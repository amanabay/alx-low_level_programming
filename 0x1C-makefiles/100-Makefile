CC_FLAGS = -Wall -Werror -Wextra -pedantic
CC = gcc $(CC_FLAGS)
SRC = $(filter-out Makefile m.h,$(wildcard *))
OBJ = $(patsubst %.c,%.o,$(SRC))
NAME = school

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $(NAME) $^

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(OBJ) $(NAME)

re: fclean all

%.o: %.c m.h
	$(CC) -c -o $@ $<

%.d: %.c
	$(CC) -MM $< -MT $(patsubst %.c,%.o,$<) -MF $@

-include $(patsubst %.c,%.d,$(SRC))
